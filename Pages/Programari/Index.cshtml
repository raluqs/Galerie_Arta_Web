@page
@model Galerie_Arta_Web.Pages.Programari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Programare</h1>
<p><b>Programează-te pentru a putea vizualiza tabloul la locația noatră.</b></p>


<p>
    <a asp-page="Create" class="button-link">Adaugă programare</a>
</p>
<p><small>Programările se realizează din 30 în 30 de minute.(ex: 12:00 sau 12:30)</small></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Tablou)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Utilizator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Programare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tablou.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utilizator.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
